<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="@dimen/list_edge_margin"

        android:layout_marginLeft="@dimen/list_edge_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/list_edge_margin"
        android:layout_marginRight="@dimen/list_edge_margin"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Base.V0.TextAppearance.Header"
        tools:text="Some Device Group" />

    <ImageView
        android:id="@+id/imgExpandCollapseBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="5"
        app:layout_constraintBottom_toBottomOf="@+id/tvHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvHeader"
        app:layout_constraintTop_toTopOf="@+id/tvHeader"
        app:srcCompat="@drawable/ic_baseline_expand_less_24"

        android:visibility="gone"

        />

</androidx.constraintlayout.widget.ConstraintLayout>